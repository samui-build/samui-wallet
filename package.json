{
  "name": "samui",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "lefthook install",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "format": "NODE_OPTIONS=\"--experimental-strip-types\" prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "NODE_OPTIONS=\"--experimental-strip-types\" prettier --check \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@workspace/config-eslint": "workspace:*",
    "@workspace/config-typescript": "workspace:*",
    "lefthook": "^2.0.0",
    "pkg-pr-new": "^0.0.60",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "lefthook",
      "sharp"
    ]
  }
}
